.custom-block
  .custom-block-title
    font-weight 600
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color rgba(18, 135, 217, 0.1)
    .custom-block-title
      color rgb(18, 135, 217);
    border-color rgb(18 135 217)
  &.warning
    background-color rgba(255,229,100,.2)
    border-color darken(#ffe564, 35%)
    .custom-block-title
      color darken(#ffe564, 50%)

  &.danger
    background-color hsla(0deg, 80%, 50%, 0.2);
    border-color darken(#f34949, 20%)
    .custom-block-title
      color darken(#f34949, 10%)
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
